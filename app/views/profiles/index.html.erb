<div class="page-header">
  <%= link_to new_profile_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Profile
  <% end %>
  <h1>Listing profiles</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>email</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @profiles) do |profile| %>
        <td><%= profile.email %></td>
        <td><%= link_to("show", :controller => "profiles", :action => "show", :id => profile.id)   %></td>
    <% end %>
    </tbody>
  </table>
</div>
